<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/save_maintext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/save_title"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/save_edittext_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:maxLength="32"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/save_titlehint"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <org.osmdroid.views.MapView
            android:id="@+id/save_map"
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            app:layout_constraintBottom_toTopOf="@id/menubar_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menubar_main"/>

        <Button
            android:id="@+id/save_savebtn"
            android:background="@drawable/save_button_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="27sp"
            android:text="@string/save_save"/>

        <Button
            android:id="@+id/save_discardbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:padding="0dp"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:text="@string/save_discard"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>