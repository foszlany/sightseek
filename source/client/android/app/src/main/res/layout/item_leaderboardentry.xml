<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/leaderboard_entry"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/leaderboard_entry_placing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:text="@string/leaderboard_entry_placing" />

    <TextView
        android:id="@+id/leaderboard_entry_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/example_sampletext" />

    <TextView
        android:id="@+id/leaderboard_entry_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingEnd="20dp"
        android:textAlignment="textEnd"
        android:text="@string/main_distancevalue" />
</LinearLayout>