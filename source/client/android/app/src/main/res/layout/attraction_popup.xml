<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dark_button_bg"
    android:backgroundTint="@color/lightest_gray"
    android:orientation="vertical"
    android:elevation="5dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/attractionpopup_placename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginHorizontal="12dp"
        android:ellipsize="none"
        android:maxWidth="200dp"
        android:singleLine="false"
        android:text="@string/example_sampletext"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/attractionpopup_visitedbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/dark_button_bg"
        android:text="@string/attractionpopup_markasvisited"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="@color/theme_main"/>

    <Button
        android:id="@+id/attractionpopup_removebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/dark_button_bg"
        android:text="@string/attractionpopup_removefromsaved"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="@color/delete_red"/>
</LinearLayout>
